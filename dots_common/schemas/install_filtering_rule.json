{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "access-lists": {
      "acl": "array",
      "items": {
        "acl-name": {
          "type": "string"
        },
        "acl-type": {
          "type": "string"
        },
        "access-list-entries": {
          "ace": "array",
          "items": {
            "rule-name": {
              "type": "string"
            },
            "matches": {
              "type": "object",
              "properties": {
                "source-ipv4-network": "string",
                "destination-ipv4-network": "string"
              }
            },
            "actions": {
              "type": "object",
              "properties": {
                "deny": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "permit": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "rate-limit": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}